<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ApplicationIcon>shutdown.ico</ApplicationIcon>
    <AssemblyTitle>Remote Shutdown Server</AssemblyTitle>
    <AssemblyDescription>Remote Shutdown Server with Web GUI and System Tray</AssemblyDescription>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>2.1.1</FileVersion>
    <Product>Remote Shutdown Server</Product>
    <Company>Remote Shutdown Server</Company>
    <Copyright>Copyright Â© 2025</Copyright>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PublishTrimmed>false</PublishTrimmed>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="shutdown.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Content Include="wwwroot\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </Content>
  </ItemGroup>

  <PropertyGroup>
    <PublishSingleFileOnBuild>false</PublishSingleFileOnBuild>
    <SingleFilePublishDir>$(MSBuildProjectDirectory)\publish\single-file\</SingleFilePublishDir>
  </PropertyGroup>

  <Target Name="PostBuild_SingleFilePublish"
          AfterTargets="Build"
          Condition=" '$(Configuration)' == 'Release' and '$(PublishSingleFileOnBuild)' == 'true' ">
    <Message Text="Publishing single-file to $(SingleFilePublishDir)" Importance="high" />
    <MSBuild Projects="$(MSBuildProjectFullPath)"
             Targets="Publish"
             Properties="Configuration=$(Configuration);RuntimeIdentifier=$(RuntimeIdentifier);PublishSingleFile=true;SelfContained=true;EnableCompressionInSingleFile=true;PublishReadyToRun=true;IncludeNativeLibrariesForSelfExtract=true;DebugType=None;DebugSymbols=false;PublishDir=$(SingleFilePublishDir)" />
  </Target>

</Project>
